{
  "hosting": {
    "public": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/works",
        "destination": "/works.html"
      },
      {
        "source": "/links",
        "destination": "/links.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}
